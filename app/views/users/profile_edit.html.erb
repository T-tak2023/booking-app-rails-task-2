<h2>Profile Edit</h2>

<%= form_with(model: @user, url: users_profile_edit_path, local:true) do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"名前" %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :icon_image ,"アイコン画像" %></th>
      <td><%= f.file_field :icon_image %></td>
    </tr>
    <tr>
      <th><%= f.label :introduction ,"自己紹介" %></th>
      <td><%= f.text_area :introduction %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "編集を完了する" %></li>
    </ul>
  </div>
<% end %>